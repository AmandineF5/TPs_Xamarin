<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="TP_Layouts.MainPage">

    <StackLayout Orientation="Vertical">
        <StackLayout Orientation="Horizontal" Padding="25,10" BackgroundColor="#58B0F0">
            <ImageButton BackgroundColor="Transparent" BorderColor="Transparent" Source="pencil.png" WidthRequest="25" HorizontalOptions="StartAndExpand"
           VerticalOptions="CenterAndExpand"/>
            <Label Text="Accueil" TextColor="White" Font="Bold,20" HorizontalOptions="CenterAndExpand"
           VerticalOptions="CenterAndExpand"/>
            <ImageButton BackgroundColor="Transparent" BorderColor="Transparent" Source="search.png" WidthRequest="25" HorizontalOptions="EndAndExpand"
           VerticalOptions="CenterAndExpand"/>
        </StackLayout>

        <StackLayout IsVisible="True"   x:Name="connectionForm" Orientation="Vertical" Padding="25,10">
            <Label Text="Connexion à Twitter" HorizontalOptions="Center"/>
            <Entry x:Name="identifiant" Placeholder="Identifiant Twitter"/>
            <Entry x:Name="mdp" Placeholder="Mot de passe"/>
            <StackLayout Orientation="Horizontal">
                <Switch x:Name="rememberMe" OnColor="DeepPink" IsToggled="True" />
                <Label Text="Mémoriser mes informations" VerticalTextAlignment="Center"/>
            </StackLayout>
            <Button x:Name="connecter" Text="SE CONNECTER"/>
            <Label x:Name="error" TextColor="IndianRed"></Label>
        </StackLayout>

        <ScrollView VerticalOptions="FillAndExpand" >

            <StackLayout IsVisible="False" x:Name="tweets"  Orientation="Vertical" 
                         VerticalOptions="FillAndExpand">
                
                <StackLayout VerticalOptions="Fill" 
                             Orientation="Horizontal"
                             Padding="10,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="75"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Image Source="https://picsum.photos/50/50/?random" Aspect="AspectFit" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2"/>
                        <Label Grid.Column="1" Grid.Row="0" Text="richard.pantoufle@yahoo.fr"/>
                        <Label Grid.Column="1" Grid.Row="1" Text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum"/>

                    </Grid>
                   
                </StackLayout>
                
                <StackLayout  HorizontalOptions="FillAndExpand" 
                              Orientation="Horizontal" 
                              VerticalOptions="Fill"
                              Padding="25,10">
                    <ImageButton BackgroundColor="Transparent" BorderColor="Transparent" Source="reply.png" WidthRequest="25"
                               HorizontalOptions="StartAndExpand" 
                               VerticalOptions="CenterAndExpand"/>
                    <ImageButton BackgroundColor="Transparent" BorderColor="Transparent" Source="retweet.png" WidthRequest="25"
                               HorizontalOptions="CenterAndExpand"
                               VerticalOptions="CenterAndExpand"/>
                    <ImageButton Source="favorite.png" WidthRequest="25"
                               HorizontalOptions="EndAndExpand"
                               VerticalOptions="CenterAndExpand"/>
                </StackLayout>

                <StackLayout  HorizontalOptions="FillAndExpand" >
                    <BoxView BackgroundColor="Gray" HeightRequest="2"></BoxView>
                </StackLayout>
              
            </StackLayout>
        </ScrollView>

        <StackLayout Orientation="Horizontal" HeightRequest="75" Padding="25,10" VerticalOptions="End">
            <Label Text="Fil" TextColor="Gray" 
                   HorizontalOptions="StartAndExpand" 
                   VerticalTextAlignment="Center"
           />
            <Label Text="Notifications" TextColor="Gray" 
                   HorizontalOptions="CenterAndExpand"
                   VerticalTextAlignment="Center"
          />
            <Label Text="Messages" TextColor="Gray" 
                   HorizontalOptions="CenterAndExpand"
                   VerticalTextAlignment="Center"
           />
            <Label Text="Moi" TextColor="Gray" 
                   HorizontalOptions="EndAndExpand"
                   VerticalTextAlignment="Center"
           />
        </StackLayout>
    </StackLayout>

</ContentPage>
